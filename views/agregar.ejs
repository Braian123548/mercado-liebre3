<!DOCTYPE html>
<html>

<%- include('partials/head')%>

  <body>
    <%- include('partials/header')%>

      <div class="cargar-contenedor">
        <h1>Cargar Producto</h1>
        <form action="/products/agregar" method="post" enctype="multipart/form-data">
          <label for="name">Nombre del Producto:</label>
          <input type="text" id="name" name="name" required>
          <br>

          <label for="description">Descripción:</label>
          <textarea id="description" name="description" rows="4" required></textarea>
          <br>

          <label for="price">Precio:</label>
          <input type="number" id="price" name="price" required>
          <br>

          <label for="Image">Imágenes Primarias:</label>
          <input type="file" id="Image" name="Image" accept="image/*" required>
          <br>

          <label for="secondaryImages">Imágenes Secundarias:</label>
          <input type="file" id="secondaryImages" name="secondaryImages" accept="image/*" max="5" multiple required>
          <br>

          <label for="discount">Descuento (%):</label>
          <input type="number" id="discount" name="discount" min="0" max="100">
          <br>

          <label for="count">Cantidad:</label>
          <input type="number" id="count" name="count" min="0" max="100" required>
          <br>

          <button type="submit">Cargar Producto</button>


        </form>

        <div class="cargar-contenedor">
          <button><a href="/products/vender">Cancelar</a></button>
        </div>


      </div>




      <%- include('partials/footer')%>

  </body>

</html>